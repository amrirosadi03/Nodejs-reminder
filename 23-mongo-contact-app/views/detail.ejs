<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        There is no such contact <br />
        <a href="/contact" class="alert-link fw-normal">&laquo;Return to Contact List</a>.
      </div>

      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.phone %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/update/<%= contact.name %>" class="btn btn-info badge">Update</a>

          <a href="/contact/delete/<%= contact.name %>" class="btn btn-danger badge" onclick="return confirm('Are you sure?');">Delete</a>
          <a href="/contact" class="card-link d-block mt-3">&laquo; Return to contact list</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
